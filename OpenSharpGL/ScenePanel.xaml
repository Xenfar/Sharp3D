<Page x:Class="OpenSharpGL.ScenePanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenSharpGL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="100"
      ShowsNavigationUI="False"
      Title="ScenePanel">

    <Grid>
        <Label Content="Wireframe" HorizontalAlignment="Center" Margin="5,34,5,0" VerticalAlignment="Top" Height="29" FontSize="16" FontWeight="Bold" FontFamily="Global User Interface" Width="90"/>
        <Button x:Name="WireframeButton" Content="Off" HorizontalAlignment="Left" Margin="34,63,0,0" VerticalAlignment="Top" Width="30" Click="WireframeButton_Click"/>
        <Label Content="Grid Size" HorizontalAlignment="Center" Margin="10,88,10,0" VerticalAlignment="Top" Height="29" FontSize="16" FontWeight="Bold" FontFamily="Global User Interface" Width="80"/>
        <TextBox x:Name="gridSizeInput" TextChanged="GridSizeInput_TextChanged" HorizontalAlignment="Center" Height="23" Margin="24,122,25,0" TextWrapping="Wrap" Text="1.0" VerticalAlignment="Top" Width="51" Background="#FF6A6A6A" BorderBrush="#FF3C3C3C"/>
    </Grid>
</Page>
